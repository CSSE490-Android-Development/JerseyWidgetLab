<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingLeft="36dp"
	android:paddingRight="36dp">
	<TextView
		android:id="@+id/name_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/name"
		android:textSize="24sp"/>
	<EditText
		android:id="@+id/name_edit"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/name_text"
		android:inputType="textCapCharacters"
		android:singleLine="true"/>
	<TextView
		android:id="@+id/number_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/name_edit"
		android:text="@string/number"
		android:textSize="24sp"/>
	<EditText
		android:id="@+id/number_edit"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/number_view"
		android:layout_marginBottom="8dip"
		android:inputType="number"
		android:singleLine="true"
		android:maxLength="3"/>
	<TextView
		android:id="@+id/jersey_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/number_edit"
		android:text="@string/color_prompt"
		android:textSize="24sp"/>
	<ImageView
		android:id="@+id/jersey_preview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/jersey_title"
		android:layout_alignLeft="@id/number_edit"
		android:src="@drawable/blue_jersey_widget"/>
	<Spinner
		android:id="@+id/jersey_color"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/jersey_preview"
		android:layout_below="@id/jersey_title"
		android:prompt="@string/color_prompt"
		android:layout_marginBottom="12dip"/>
	<Button
		android:id="@+id/ok"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/jersey_color"
		android:layout_alignParentRight="true"
		android:text="@string/ok"/>
	<Button
		android:id="@+id/cancel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/jersey_color"
		android:layout_toLeftOf="@id/ok"
		android:text="@string/cancel"/>
</RelativeLayout>